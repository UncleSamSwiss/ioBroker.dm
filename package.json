    "email": "samuel.weibel@gmail.com"
  },
  "homepage": "https://github.com/UncleSamSwiss/ioBroker.dm",
  "license": "MIT",
  "keywords": [
    "device",
    "hardware",
    "manager"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:UncleSamSwiss/ioBroker.dm.git"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.5.1"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^2.2.1",
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/plugin-proposal-decorators": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "@iobroker/adapter-react": "^1.6.31",
    "@iobroker/testing": "^2.5.2",
    "@material-ui/core": "^4.12.3",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "@material-ui/pickers": "^3.3.10",
    "@mui/icons-material": "^5.3.1",
    "@mui/material": "^5.2.6",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/gulp": "^4.0.9",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.18.3",
    "@types/proxyquire": "^1.3.28",
    "@types/react": "^16.14.21",
    "@types/react-dom": "^16.9.14",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.7",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "axios": "^0.24.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "gulp": "^4.0.2",
    "material-ui-chip-input": "^1.1.0",
    "mocha": "^9.1.3",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.5.1",
    "proxyquire": "^2.1.3",
    "react": "^16.14.0",
    "react-cropper": "^2.1.8",
    "react-dom": "^16.14.0",
    "react-icons": "^4.3.1",
    "react-text-mask": "^5.4.3",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.4.0",
    "typescript": "~4.4.4"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/build/",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:parcel": "parcel build admin/src/tab.tsx -d admin/build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts && npm run build:parcel",
    "watch:parcel": "parcel admin/src/tab.tsx -d admin/build",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx src/ admin/src/",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/UncleSamSwiss/ioBroker.dm/issues"
  },
  "readmeFilename": "README.md"
}
